<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Realtime.Presenter.Mobile.Presentations.Views.PresentationView">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Button Grid.Column="0" Grid.Row="0" Text="Next" Command="{Binding NextCommand}" />
            <Button Grid.Column="1" Grid.Row="0" Text="Next" Command="{Binding PreviousCommand}" />
            <StackLayout Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
                <Label Text="Error Count" />
                <Label Text="{Binding ErrorCount}" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>